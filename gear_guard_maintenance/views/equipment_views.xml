<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gg_equipment_tree" model="ir.ui.view">
        <field name="name">gg.equipment.tree</field>
        <field name="model">gg.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_no"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="technician_id"/>
                <field name="location"/>
                <field name="is_scrapped"/>
            </tree>
        </field>
    </record>

    <record id="view_gg_equipment_form" model="ir.ui.view">
        <field name="name">gg.equipment.form</field>
        <field name="model">gg.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" name="action_view_requests" icon="fa-wrench" string="Maintenance">
                            <field name="request_count_open" widget="statinfo" string="Open"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="serial_no"/>
                            <field name="category_id"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="purchase_date"/>
                            <field name="warranty_end"/>
                            <field name="department_id"/>
                            <field name="employee_id"/>
                        </group>
                    </group>
                    <group string="Maintenance">
                        <field name="maintenance_team_id"/>
                        <field name="technician_id"/>
                        <field name="is_scrapped" readonly="1"/>
                    </group>
                    <chatter>
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </chatter>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_gg_equipment_search" model="ir.ui.view">
        <field name="name">gg.equipment.search</field>
        <field name="model">gg.equipment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="serial_no"/>
                <filter name="group_by_department" string="Department" context="{'group_by': 'department_id'}"/>
                <filter name="group_by_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                <filter name="group_by_team" string="Team" context="{'group_by': 'maintenance_team_id'}"/>
            </search>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gg_maintenance_team_tree" model="ir.ui.view">
        <field name="name">gg.maintenance.team.tree</field>
        <field name="model">gg.maintenance.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_gg_maintenance_team_form" model="ir.ui.view">
        <field name="name">gg.maintenance.team.form</field>
        <field name="model">gg.maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="member_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
